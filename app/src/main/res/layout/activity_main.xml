<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#11C7E6"
    tools:context=".MainActivity">

    <RelativeLayout
        android:id="@+id/abc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/custom_layout_header"
        android:layout_margin="20dp">

        <de.hdodenhof.circleimageview.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/profile_image"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_margin="20dp"
            android:layout_alignParentEnd="true"
            android:src="@drawable/test"
            app:civ_border_width="2dp"
            app:civ_border_color="#11C7E6"/>

        <TextView
            android:id="@+id/txtXinchao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="20dp"
            android:text="Xin chào ,"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25dp"
            android:textStyle="bold"
            android:layout_marginStart="10dp"
            android:textColor="#11C7E6"
            android:layout_below="@+id/txtXinchao"
            android:text="Liêm"/>


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <EditText
                    android:layout_width="320dp"
                    android:layout_height="43dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/custom_layout_search"
                    android:drawableStart="@android:drawable/ic_menu_search"
                    android:hint="Tìm kiếm ..." />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/txtHistorySearch"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:layout_marginRight="10dp"
                        android:textSize="20dp"
                        android:text="Lịch sử tìm kiếm"/>

                    <com.wefika.flowlayout.FlowLayout
                        android:id="@+id/historySearch"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="20dp"
                        android:layout_marginLeft="20dp"
                        android:layout_below="@+id/txtHistorySearch">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="10dp"
                            android:layout_marginBottom="10dp"
                            android:background="@drawable/custom_layout_item"
                            android:paddingStart="30dp"
                            android:paddingTop="10dp"
                            android:paddingEnd="30dp"
                            android:paddingBottom="10dp"
                            android:text="Quan 8 "
                            android:textColor="#000000" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="10dp"
                            android:layout_marginBottom="10dp"
                            android:background="@drawable/custom_layout_item"
                            android:paddingStart="30dp"
                            android:paddingTop="10dp"
                            android:paddingEnd="30dp"
                            android:paddingBottom="10dp"
                            android:text="Quan 6"
                            android:textColor="#000000" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="10dp"
                            android:layout_marginBottom="10dp"
                            android:background="@drawable/custom_layout_item"
                            android:paddingStart="30dp"
                            android:paddingTop="10dp"
                            android:paddingEnd="30dp"
                            android:paddingBottom="10dp"
                            android:text="Quan 4"
                            android:textColor="#000000" />

                    </com.wefika.flowlayout.FlowLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/historySearch"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:text="Được đánh giá cao"
                            android:textSize="25dp"
                            android:textStyle="bold" />

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="10dp">

                            <de.hdodenhof.circleimageview.CircleImageView
                                xmlns:app="http://schemas.android.com/apk/res-auto"
                                android:id="@+id/imgWoker1"
                                android:layout_width="95dp"
                                android:layout_height="95dp"
                                android:layout_marginStart="10dp"
                                android:src="@drawable/test"
                                app:civ_border_color="#11C7E6"
                                app:civ_border_width="2dp" />

                            <TextView
                                android:id="@+id/txtWoker1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="15dp"
                                android:layout_toEndOf="@+id/imgWoker1"
                                android:textColor="#11C7E6"
                                android:text="Nhân viên A"
                                android:textSize="25dp" />

                            <TextView
                                android:layout_width="167dp"
                                android:layout_height="46dp"
                                android:layout_below="@+id/txtWoker1"
                                android:layout_marginStart="15dp"
                                android:layout_toEndOf="@+id/imgWoker1"
                                android:text="Dia chi" />


                            <ImageView
                                android:id="@+id/imageStar1"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_alignParentEnd="true"
                                android:layout_marginTop="15dp"
                                android:layout_marginEnd="42dp"
                                android:src="@drawable/star"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_alignParentEnd="true"
                                android:layout_marginEnd="35dp"
                                android:textColor="#11C7E6"
                                android:layout_below="@+id/imageStar1"
                                android:textStyle="bold"
                                android:text="5.0"
                                android:textSize="30dp"/>

                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="10dp">


                            <de.hdodenhof.circleimageview.CircleImageView
                                xmlns:app="http://schemas.android.com/apk/res-auto"
                                android:id="@+id/imgWoker2"
                                android:layout_width="95dp"
                                android:layout_height="95dp"
                                android:layout_marginStart="10dp"
                                android:src="@drawable/test"
                                app:civ_border_color="#11C7E6"
                                app:civ_border_width="2dp" />

                            <TextView
                                android:id="@+id/txtWoker2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="15dp"
                                android:layout_toEndOf="@+id/imgWoker2"
                                android:textColor="#11C7E6"
                                android:text="Nhân viên B"
                                android:textSize="25dp" />

                            <TextView
                                android:layout_width="167dp"
                                android:layout_height="46dp"
                                android:layout_below="@+id/txtWoker2"
                                android:layout_marginStart="15dp"
                                android:layout_toEndOf="@+id/imgWoker2"
                                android:text="Dia chi" />


                            <ImageView
                                android:id="@+id/imageStar2"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_alignParentEnd="true"
                                android:layout_marginTop="15dp"
                                android:layout_marginEnd="42dp"
                                android:src="@drawable/star"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_alignParentEnd="true"
                                android:layout_marginEnd="35dp"
                                android:textColor="#11C7E6"
                                android:layout_below="@+id/imageStar2"
                                android:textStyle="bold"
                                android:text="5.0"
                                android:textSize="30dp"/>

                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="10dp">


                            <de.hdodenhof.circleimageview.CircleImageView
                                xmlns:app="http://schemas.android.com/apk/res-auto"
                                android:id="@+id/imgWoker3"
                                android:layout_width="95dp"
                                android:layout_height="95dp"
                                android:layout_marginStart="10dp"
                                android:src="@drawable/test"
                                app:civ_border_color="#11C7E6"
                                app:civ_border_width="2dp" />

                            <TextView
                                android:id="@+id/txtWoker3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="15dp"
                                android:layout_toEndOf="@+id/imgWoker3"
                                android:textColor="#11C7E6"
                                android:text="Nhân viên C"
                                android:textSize="25dp" />

                            <TextView
                                android:layout_width="167dp"
                                android:layout_height="46dp"
                                android:layout_below="@+id/txtWoker3"
                                android:layout_marginStart="15dp"
                                android:layout_toEndOf="@+id/imgWoker3"
                                android:text="Dia chi" />


                            <ImageView
                                android:id="@+id/imageStar3"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_alignParentEnd="true"
                                android:layout_marginTop="15dp"
                                android:layout_marginEnd="42dp"
                                android:src="@drawable/star"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_alignParentEnd="true"
                                android:layout_marginEnd="35dp"
                                android:textColor="#11C7E6"
                                android:layout_below="@+id/imageStar3"
                                android:textStyle="bold"
                                android:text="5.0"
                                android:textSize="30dp"/>

                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="10dp">


                            <de.hdodenhof.circleimageview.CircleImageView
                                xmlns:app="http://schemas.android.com/apk/res-auto"
                                android:id="@+id/imgWoker4"
                                android:layout_width="95dp"
                                android:layout_height="95dp"
                                android:layout_marginStart="10dp"
                                android:src="@drawable/test"
                                app:civ_border_color="#11C7E6"
                                app:civ_border_width="2dp" />

                            <TextView
                                android:id="@+id/txtWoker4"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="15dp"
                                android:layout_toEndOf="@+id/imgWoker4"
                                android:textColor="#11C7E6"
                                android:text="Nhân viên D"
                                android:textSize="25dp" />

                            <TextView
                                android:layout_width="167dp"
                                android:layout_height="46dp"
                                android:layout_below="@+id/txtWoker4"
                                android:layout_marginStart="15dp"
                                android:layout_toEndOf="@+id/imgWoker4"
                                android:text="Dia chi" />


                            <ImageView
                                android:id="@+id/imageStar4"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_alignParentEnd="true"
                                android:layout_marginTop="15dp"
                                android:layout_marginEnd="42dp"
                                android:src="@drawable/star"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_alignParentEnd="true"
                                android:layout_marginEnd="35dp"
                                android:textColor="#11C7E6"
                                android:layout_below="@+id/imageStar4"
                                android:textStyle="bold"
                                android:text="5.0"
                                android:textSize="30dp"/>

                        </RelativeLayout>

                    </LinearLayout>
                </RelativeLayout>
            </LinearLayout>

        </ScrollView>
        <LinearLayout
            android:id="@+id/scroll"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:background="#FFFFFF"
            android:layout_alignParentBottom="true"
            android:weightSum="4"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/imageButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="1dp"
                android:layout_weight="1"
                android:background="#FFFFFF"
                app:srcCompat="@drawable/home" />

            <ImageButton
                android:id="@+id/imageButton2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:background="#FFFFFF"
                app:srcCompat="@drawable/history" />
            <ImageButton
                android:id="@+id/imageButton3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:background="#FFFFFF"
                app:srcCompat="@drawable/notification" />
            <ImageButton
                android:id="@+id/imageButton4"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:background="#FFFFFF"
                app:srcCompat="@drawable/info" />
        </LinearLayout>
    </RelativeLayout>




</LinearLayout>
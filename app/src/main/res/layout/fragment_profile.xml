<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfileFragment"
    android:background="#0D11c7e6">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/grad">


        <RelativeLayout
            android:id="@+id/imgUser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/imgAvatar"
                android:layout_width="110dp"
                android:layout_height="150dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/avatar"
                app:civ_border_color="#11C7E6"
                app:civ_border_width="2dp"
                />
        </RelativeLayout>
        <TextView
            android:id="@+id/tv_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40sp"
            android:gravity="center"
            android:layout_marginStart="30dp"
            android:fontFamily="sans-serif-light"
            android:text="Trần Nhật Tân"
            android:textColor="@color/white"
            android:textSize="32sp"
            android:textStyle="bold"
            android:paddingBottom="100dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_chinhsuataikhoan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="125dp"
                android:layout_marginTop="85dp"
                android:text="Chỉnh sửa tài khoản"
                android:textColor="#FFFFFF"
                android:textSize="20dp" />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/direction"
                android:layout_marginTop="88dp"/>
        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="120dp"
                        android:layout_marginEnd="20dp"
                        android:gravity="top"
                        android:background="@drawable/custom_layout_listitem"
                        android:paddingBottom="15dp"
                        android:paddingTop="15dp"
                        android:paddingLeft="15dp"
                        android:textSize="20dp"
                        android:text="Danh sách đơn hàng"
                        android:textColor="@color/black"
                        android:fontFamily="sans-serif-light"
                        android:drawableLeft="@drawable/listorder_ic"
                        android:drawablePadding="10dp"
                        />

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:src="@drawable/direction"
                        android:layout_alignParentEnd="true"
                        android:layout_marginTop="140dp"
                        android:layout_marginStart="300dp"/>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:textColor="@color/black"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginStart="20dp"
                        android:layout_marginEnd="20dp"
                        android:layout_marginTop="20dp"
                        android:gravity="top"
                        android:background="@drawable/custom_layout_listitem"
                        android:paddingBottom="15dp"
                        android:paddingTop="15dp"
                        android:paddingLeft="15dp"
                        android:textSize="20dp"
                        android:text="Hỗ trợ khách hàng"
                        android:fontFamily="sans-serif-light"
                        android:drawableLeft="@drawable/contactsupport_ic"
                        android:drawablePadding="10dp"/>

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:src="@drawable/direction"
                        android:layout_alignParentEnd="true"
                        android:layout_marginTop="37dp"
                        android:layout_marginStart="300dp"/>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:textColor="@color/black"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginEnd="20dp"
                        android:gravity="top"
                        android:background="@drawable/custom_layout_listitem"
                        android:paddingBottom="15dp"
                        android:paddingTop="15dp"
                        android:paddingLeft="15dp"
                        android:textSize="20dp"
                        android:text="Thông tin người dùng"
                        android:fontFamily="sans-serif-light"
                        android:drawableLeft="@drawable/account"
                        android:drawablePadding="10dp"/>

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:src="@drawable/direction"
                        android:layout_alignParentEnd="true"
                        android:layout_marginTop="37dp"
                        android:layout_marginStart="300dp"/>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    >

                    <TextView
                        android:textColor="@color/black"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginEnd="20dp"
                        android:gravity="top"
                        android:background="@drawable/custom_layout_listitem"
                        android:paddingBottom="15dp"
                        android:paddingTop="15dp"
                        android:paddingLeft="15dp"
                        android:textSize="20dp"
                        android:text="Thông báo"
                        android:fontFamily="sans-serif-light"
                        android:drawableLeft="@drawable/notification_profile_ic"
                        android:drawablePadding="10dp"
                        />

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:src="@drawable/direction"
                        android:layout_alignParentEnd="true"
                        android:layout_marginTop="37dp"
                        android:layout_marginStart="300dp"/>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <Button
                        android:id="@+id/btnLogout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:onClick="clickToLogout"
                        android:text="Đăng xuất"
                        android:textAllCaps="false"
                        android:fontFamily="sans-serif-light"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginEnd="20dp"
                        android:gravity="top"
                        android:background="@drawable/custom_layout_listitem"
                        android:paddingBottom="15dp"
                        android:paddingTop="15dp"
                        android:paddingLeft="15dp"
                        android:textSize="20dp"
                        android:textColor="@color/black"
                        android:drawableLeft="@drawable/logout"
                        android:drawablePadding="10dp"/>

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:src="@drawable/direction"
                        android:layout_alignParentEnd="true"
                        android:layout_marginTop="37dp"
                        android:layout_marginStart="300dp"/>
                </RelativeLayout>

            </LinearLayout>

        </ScrollView>
    </RelativeLayout>
</RelativeLayout>
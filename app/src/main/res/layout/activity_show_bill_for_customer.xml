<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ShowBillForCustomerActivity"
    >


    <TextView
        android:id="@+id/tv_title_xacnhanhoadon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#B3FFD800"
        android:fontFamily="@font/font5"
        android:gravity="center"
        android:padding="10dp"
        android:text="Xác nhận hóa đơn"
        android:textSize="35dp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/img_hoadon"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_below="@+id/tv_title_xacnhanhoadon"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="21dp"
        android:src="@drawable/hinhhoadon" />



    <TextView
        android:id="@+id/tv_orderDetail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/img_hoadon"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="20dp"
        android:text="Chi tiết hóa đơn:"
        android:textSize="22dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_ngaythanghoadon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_orderDetail"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="20dp"
        android:gravity="right"
        android:text="22/10/2021"
        android:textSize="19dp"
        android:textStyle="italic" />

    <View
        android:id="@+id/vLine1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/tv_ngaythanghoadon"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="10dp"
        android:background="#80000000" />

    <RelativeLayout
        android:id="@+id/rl_phiphutung"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/vLine1"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp">

        <TextView
            android:id="@+id/tv_PhiPhuTung"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="Phí phụ tùng:"
            android:textSize="19dp" />

        <TextView
            android:id="@+id/tv_giaPhiPhuTung"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/tv_phiphutungCustomer_d"
            android:padding="5dp"
            android:text="50000"
            android:textSize="19dp" />

        <TextView
            android:id="@+id/tv_phiphutungCustomer_d"
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="5dp"
            android:text="đ"
            android:textSize="19dp" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_vesinh"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rl_phiphutung"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="20dp">

        <TextView
            android:id="@+id/tv_PhiVeSinh"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="Phí di chuyển:"
            android:textSize="19dp" />

        <TextView
            android:id="@+id/tv_giaPhiVeSinh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/tv_phidichuyenCustomer_d"
            android:padding="5dp"
            android:text="15000"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/tv_phidichuyenCustomer_d"
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="5dp"
            android:text="đ"
            android:textSize="19dp" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_tienCong"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rl_vesinh"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="20dp">

        <TextView
            android:id="@+id/tv_TienCong"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="Phí dịch vụ:"
            android:textSize="19dp" />

        <TextView
            android:id="@+id/tv_giaTienCong"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/tv_phidichvuCustomer_d"
            android:padding="5dp"
            android:text="150000"
            android:textSize="19dp" />

        <TextView
            android:id="@+id/tv_phidichvuCustomer_d"
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="5dp"
            android:text="đ"
            android:textSize="19dp" />

    </RelativeLayout>

    <View
        android:id="@+id/vLine2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/rl_tienCong"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="10dp"
        android:background="#80000000" />

    <RelativeLayout
        android:id="@+id/rl_Total"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/vLine2"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="20dp">

        <TextView
            android:id="@+id/tv_Total"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tổng tiền:"
            android:textSize="26dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_TotalCost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/tv_TotalCustomer_d"
            android:text="215,000"
            android:textSize="26dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_TotalCustomer_d"
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="5dp"
            android:text="đ"
            android:textSize="19dp" />

    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rl_Total"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:text="Phương thức thanh toán: Tiền mặt"
        android:textSize="20dp"
        android:textStyle="italic" />

    <Button
        android:id="@+id/btnAcceptBillToRating"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="80dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="80dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/custom_layout_timtho"
        android:fontFamily="@font/font5"
        android:text="Tiếp theo"
        android:textSize="20dp"
        android:textStyle="bold" />


</RelativeLayout>
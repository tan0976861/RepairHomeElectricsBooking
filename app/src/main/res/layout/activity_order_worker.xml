<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OrderWorkerActivity">


    <RelativeLayout
        android:id="@+id/layout1"
        android:layout_width="match_parent"
        android:layout_height="550dp"
        android:layout_marginTop="30dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:background="@drawable/custom_layout_orderworker">

        <TextView
            android:id="@+id/txtInfor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/font5"
            android:gravity="center"
            android:text="Thông tin đơn hàng"
            android:textAllCaps="true"
            android:textColor="@color/black"
            android:textSize="30dp"
            android:textStyle="bold" />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#33000000"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/txtInfor"/>
        <LinearLayout
            android:id="@+id/layoutName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:orientation="horizontal"
            android:layout_below="@+id/txtInfor"
            android:layout_marginBottom="5dp">

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Khách hàng:"
                android:layout_marginStart="30dp"
                android:fontFamily="@font/font5"
                android:textSize="20dp"
                />
            <TextView
                android:id="@+id/txtTenKhachHang"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Lê Hoàng Thuận"
                android:gravity="center"
                android:fontFamily="@font/font5"
                android:textSize="20dp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layoutDevice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:layout_below="@+id/layoutName"
            android:layout_marginBottom="5dp">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Thiết bị;"
                android:layout_marginStart="30dp"
                android:fontFamily="@font/font5"
                android:textSize="20dp"
                />
            <TextView
                android:id="@+id/txtDevice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Máy lạnh"
                android:gravity="center"
                android:fontFamily="@font/font5"
                android:textSize="20dp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layoutProblem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:layout_below="@+id/layoutDevice"
            android:layout_marginBottom="5dp">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Vấn đề:"
                android:layout_marginStart="30dp"
                android:fontFamily="@font/font5"
                android:textSize="20dp"
                />
            <TextView
                android:id="@+id/txtProblem"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Máy lạnh bị rò rỉ nước"
                android:gravity="center"
                android:fontFamily="@font/font5"
                android:textSize="20dp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layoutAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:layout_below="@+id/layoutProblem"
            android:layout_marginBottom="5dp">

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Địa chỉ:"
                android:layout_marginStart="30dp"
                android:fontFamily="@font/font5"
                android:textSize="20dp"
                />
            <TextView
                android:id="@+id/txtAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Quận 7, Hồ Chí Minh"
                android:fontFamily="@font/font5"
                android:gravity="center"
                android:textSize="20dp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layoutDistance"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:layout_below="@+id/layoutAddress"
            android:layout_marginBottom="5dp">

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Khoảng cách:"
                android:layout_marginStart="30dp"
                android:fontFamily="@font/font5"
                android:textSize="20dp"
                />
            <TextView
                android:id="@+id/txtDistance"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="1 km"
                android:gravity="center"
                android:fontFamily="@font/font5"
                android:textSize="20dp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layoutPhone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:layout_below="@+id/layoutDistance"
            android:layout_marginBottom="5dp">

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Điện thoại:"
                android:layout_marginStart="30dp"
                android:fontFamily="@font/font5"
                android:textSize="20dp"
                />
            <TextView
                android:id="@+id/txtPhone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="0937856890"
                android:gravity="center"
                android:fontFamily="@font/font5"
                android:textSize="20dp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layoutImage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="vertical"
            android:layout_below="@+id/layoutPhone"
            android:layout_marginBottom="5dp">

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hình ảnh:"
                android:layout_marginStart="30dp"
                android:fontFamily="@font/font5"
                android:textSize="20dp"
                />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="150dp"
                android:layout_marginStart="30dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="30dp"
                android:background="@drawable/imageproblem"/>
        </LinearLayout>

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layout1"

        android:layout_marginTop="40dp"
        >

        <Button
            android:id="@+id/btnAccept"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="50dp"
            android:background="#66008000"
            android:fontFamily="@font/font5"
            android:padding="20dp"
            android:text="Xác nhận" />

        <Button
            android:id="@+id/btnCancel"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="50dp"
            android:background="#66FB0000"
            android:fontFamily="@font/font5"
            android:padding="20dp"
            android:text="Hủy bỏ" />
    </RelativeLayout>

</RelativeLayout>
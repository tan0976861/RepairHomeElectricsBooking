<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ForgotPasswordActivity">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_TimMatKhauCuaBan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="150dp"
            android:layout_marginBottom="20dp"
            android:fontFamily="@font/font5"
            android:gravity="center"
            android:text="Tìm lại mật khẩu của bạn"
            android:textColor="@color/black"
            android:textSize="30dp" />

        <TextView
            android:id="@+id/tv_Mota"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_TimMatKhauCuaBan"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:text="Vui lòng nhập số di động để tìm lại mật khẩu của bạn."
            android:textSize="20dp" />

        <EditText
            android:id="@+id/tv_forgot_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_Mota"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/custom_layout_listitem"
            android:hint="Nhập số điện thoại"

            android:padding="15dp" />

        <Button
            android:id="@+id/btn_forgot_password"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_forgot_password"
            android:layout_centerInParent="true"
            android:layout_marginTop="20dp"
            android:background="@drawable/login_bg"
            android:textSize="20dp"
            android:text="Gửi" />


    </RelativeLayout>

</RelativeLayout>
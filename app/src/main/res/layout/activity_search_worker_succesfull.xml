<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".SearchWorkerSuccesfullActivity">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/img_avatar"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:src="@drawable/avatar_default"
        app:civ_border_color="#11C7E6"
        app:civ_border_width="2dp" />
    <TextView
        android:id="@+id/tv_search_worker_fullName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ho ten"
        />
    <TextView
        android:id="@+id/tv_search_worker_sdt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="So dien thoai"
        />
    <TextView
        android:id="@+id/tv_search_worker_giaTien"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Gia tien"
        />
    <TextView
        android:id="@+id/tv_search_worker_longtitude"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Longtitude"
        />
    <TextView
        android:id="@+id/tv_search_worker_latitude"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Latitude"
        />

</LinearLayout>
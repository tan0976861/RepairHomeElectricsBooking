<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HistoryFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">



        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/custom_layout_notify">

            <TextView
                android:id="@+id/tvDonHangWorker"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="10dp"
                android:text="Đơn Hàng"
                android:fontFamily="@font/font5"
                android:textColor="@color/white"
                android:textSize="25dp"
                android:textStyle="bold" />
        </RelativeLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="20dp"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:id="@+id/tvDateHistory1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:textSize="17dp"
                        android:text="09/09/2021" />

                    <TextView
                        android:id="@+id/tvNameHistory1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tvDonHangWorker"
                        android:gravity="left"
                        android:textSize="17dp"
                        android:text="Hồ Minh Tuấn"
                        android:textColor="@color/black" />

                    <TextView
                        android:id="@+id/tvPriceHistory1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tvNameHistory1"
                        android:gravity="left"
                        android:textSize="17dp"
                        android:textColor="@color/black"
                        android:text="Giá Tiền : 500.000 vnđ" />

                    <TextView
                        android:id="@+id/tvThietBiSuaHistory1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tvPriceHistory1"
                        android:gravity="left"
                        android:textSize="17dp"
                        android:text="Thiết bị sửa: Máy Lạnh"
                        android:drawableRight="@drawable/sell"
                        android:textColor="@color/black"/>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="20dp"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:id="@+id/tvDateDonHang2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:textSize="17dp"
                        android:text="12/09/2021" />

                    <TextView
                        android:id="@+id/tvNameHistory2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tvDateDonHang2"
                        android:gravity="left"
                        android:text="Bùi Ngọc Mạnh"
                        android:textColor="@color/black"
                        android:textSize="17dp" />

                    <TextView
                        android:id="@+id/tvPriceHistory2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tvNameHistory2"
                        android:gravity="left"
                        android:textSize="17dp"
                        android:textColor="@color/black"
                        android:text="Giá Tiền : 500.000 vnđ" />

                    <TextView
                        android:id="@+id/tvThietBiSuaHistory2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tvPriceHistory2"

                        android:textSize="17dp"                        android:gravity="left"
                        android:text="Thiết bị sửa: Máy Giặt"
                        android:drawableRight="@drawable/sell"
                        android:textColor="@color/black"/>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="20dp"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:id="@+id/tvDateDonHang3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:textSize="17dp"
                        android:text="22/09/2021"
                        />

                    <TextView
                        android:id="@+id/tvNameHistory3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tvDateDonHang3"
                        android:gravity="left"
                        android:textSize="17dp"
                        android:text="Cao Đại Thành"
                        android:textColor="@color/black" />

                    <TextView
                        android:id="@+id/tvPriceHistory3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tvNameHistory3"
                        android:gravity="left"
                        android:textSize="17dp"
                        android:textColor="@color/black"
                        android:text="Giá Tiền : 500.000 vnđ" />

                    <TextView
                        android:id="@+id/tvThietBiSuaHistory3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tvPriceHistory3"
                        android:gravity="left"
                        android:textSize="17dp"
                        android:textColor="@color/black"
                        android:text="Thiết bị sửa: Tủ Lạnh"
                        android:drawableRight="@drawable/sell"/>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="20dp"
                    android:orientation="vertical"
                    android:padding="20dp">


                    <TextView
                        android:id="@+id/tvDateDonHang4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:textSize="17dp"
                        android:text="23/09/2021" />

                    <TextView
                        android:id="@+id/tvNameHistory4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tvDateDonHang4"
                        android:gravity="left"
                        android:textSize="17dp"
                        android:text="Nguyễn Văn Minh"
                        android:textColor="@color/black" />

                    <TextView
                        android:id="@+id/tvPriceHistory4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tvNameHistory4"
                        android:gravity="left"
                        android:textSize="17dp"
                        android:textColor="@color/black"
                        android:text="Giá Tiền : 400.000 vnđ" />

                    <TextView
                        android:id="@+id/tvThietBiSuaHistory4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tvPriceHistory4"
                        android:gravity="left"
                        android:textSize="17dp"
                        android:textColor="@color/black"
                        android:text="Thiết bị sửa: Máy Lạnh"
                        android:drawableRight="@drawable/sell"/>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="20dp"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:id="@+id/tvDateDonHang5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:textSize="17dp"
                        android:text="29/08/2021" />

                    <TextView
                        android:id="@+id/tvNameHistory5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tvDateDonHang5"
                        android:gravity="left"
                        android:textSize="17dp"
                        android:text="Trần Công Liêm"
                        android:textColor="@color/black"
                        />

                    <TextView
                        android:id="@+id/tvPriceHistory5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tvNameHistory4"
                        android:gravity="left"
                        android:textSize="17dp"
                        android:textColor="@color/black"
                        android:text="Giá Tiền : 500.000 vnđ" />

                    <TextView
                        android:id="@+id/tvThietBiSuaHistory5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tvPriceHistory5"
                        android:gravity="left"
                        android:textSize="17dp"
                        android:textColor="@color/black"
                        android:text="Thiết bị sửa: Máy rửa chén "
                        android:drawableRight="@drawable/sell"/>

                </LinearLayout>
            </LinearLayout>
            <!--            </RelativeLayout>-->
        </ScrollView>
    </LinearLayout>
</RelativeLayout>
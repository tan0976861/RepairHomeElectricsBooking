<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_white_corner_16"
    android:layout_margin="16dp">

    <TextView
        android:id="@+id/tv1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_yellow_corner_16_top_left_top_right"
        android:gravity="center"
        android:padding="12dp"
        android:textSize="20dp"
        android:text="Cho chúng tôi biết lý do"
        android:textColor="@color/black"
        android:textStyle="bold"
        />
    <ImageView
        android:id="@+id/imgCloseDialogWorker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/canceldialog"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="10dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@+id/tv1">

        <TextView
            android:id="@+id/tv2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv1"
            android:padding="12dp"
            android:textSize="18sp"
            android:text="Hãy chọn những lý do bên dưới" />

        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp">

            <RadioButton
                android:id="@+id/radio_1"
                android:text="Vi tri qua xa"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:textSize="16sp"
                android:paddingLeft="15dp"/>

            <RadioButton
                android:id="@+id/radio_2"
                android:text="Thiết bị đã hoạt động"
                android:checked="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:textSize="16sp"
                android:paddingLeft="15dp"
                />

            <RadioButton
                android:id="@+id/radio_3"
                android:text="Không thể liên hệ voi khach hang"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:textSize="16sp"
                android:paddingLeft="15dp"/>
            <RadioButton
                android:id="@+id/radio_4"
                android:text="Toi dang ban"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:textSize="16sp"
                android:paddingLeft="15dp"/>
            <RadioButton
                android:id="@+id/radio_5"
                android:text="Gặp khó khăn khi liên hệ voi khach hang"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:textSize="16sp"
                android:paddingLeft="15dp"/>

            <RadioButton
                android:id="@+id/radio_6"
                android:text="Lý do khác"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:textSize="16sp"
                android:paddingLeft="15dp"/>
        </RadioGroup>

        <Button
            android:id="@+id/btnCancelRealOrder"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:text="Hủy Đơn Hàng"
            android:background="@drawable/custom_btnhuydonhang_customer"
            android:textColor="@color/white"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="18dp"
            android:layout_marginEnd="18dp"
            android:layout_marginBottom="10dp"/>

    </LinearLayout>
</RelativeLayout>
                        android:layout_height="46dp"
                        android:layout_below="@+id/diachi1"
                        android:layout_marginStart="15dp"
                        android:layout_toEndOf="@+id/imgWoker2"
                        android:text="Sửa máy lạnh" />

                    <TextView
                        android:layout_width="167dp"
                        android:layout_height="22dp"
                        android:layout_above="@+id/phanloai1"

                        android:layout_marginStart="15dp"
                        android:layout_toEndOf="@+id/imgWoker2"
                        android:text="~500,000VNĐ" />


                    <ImageView
                        android:id="@+id/imageStar2"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentEnd="true"
                        android:layout_marginTop="15dp"
                        android:layout_marginEnd="42dp"
                        android:src="@drawable/star" />

                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/imageStar2"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="35dp"
                        android:text="5.0"
                        android:textColor="@color/yellow"
                        android:textSize="28dp" />



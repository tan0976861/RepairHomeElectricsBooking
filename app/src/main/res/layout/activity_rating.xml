<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".SearchWorkerSuccesfullActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/custom_layout_rating"
        android:orientation="vertical"
        android:gravity="center">

        <TextView
            android:id="@+id/txtNotiRating"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="Hãy đánh giá thợ nhé!"
            android:textColor="@color/black"
            android:textSize="25dp" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/img_avatar"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_centerInParent="true"
            android:layout_marginTop="10dp"
            android:src="@drawable/avatar" />

        <TextView
            android:id="@+id/tv_ratingNameWorker"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="Công Liêm "
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="22dp" />


        <RatingBar
            android:id="@+id/rtRatingBarStart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:numStars="5"
            android:rating="5"
            android:stepSize="0.5"
            android:theme="@style/RatingBar" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:orientation="vertical">

        <EditText
            android:id="@+id/tv_ratingCommentWorker"
            android:layout_width="350dp"
            android:layout_height="300dp"
            android:layout_marginTop="60dp"
            android:padding="10dp"
            android:gravity="left"
            android:layout_gravity="center"
            android:hint="Nhận xét..."
            android:background="@drawable/custom_layout_comment_rating"
            android:textColor="@color/black"
            android:textSize="18dp" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/custome_btndone_rating"
            android:text="Gửi" />
    </LinearLayout>


</LinearLayout>
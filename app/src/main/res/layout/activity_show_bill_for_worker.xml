<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ShowBillForWorkerActivity">
    <ScrollView
        android:id="@+id/scrollViewBillWorker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_title_xacnhanhoadon_worker"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#B3FFD800"
                android:fontFamily="@font/font5"
                android:gravity="center"
                android:padding="10dp"
                android:text="Hóa Đơn Thanh Toán"
                android:textSize="35dp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/img_hoadon_worker"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_below="@+id/tv_title_xacnhanhoadon_worker"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="15dp"
                android:src="@drawable/hinhhoadon" />


            <TextView
                android:id="@+id/tv_orderDetail_worker"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/img_hoadon_worker"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:text="Chi tiết hóa đơn:"
                android:textSize="22dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_ngaythanghoadon_worker"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_orderDetail_worker"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:gravity="right"
                android:text="22/10/2021"
                android:textSize="19dp"
                android:textStyle="italic" />

            <View
                android:id="@+id/vLine1_worker"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/tv_ngaythanghoadon_worker"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="10dp"
                android:background="#80000000" />

            <RelativeLayout
                android:id="@+id/rl_phiphutung_worker"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/vLine1_worker"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp">

                <TextView
                    android:id="@+id/tv_PhiPhuTungworker"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:text="Phí phụ tùng:"
                    android:textSize="19dp" />

                <TextView
                    android:id="@+id/tv_giaPhiPhuTung_worker"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:padding="5dp"
                    android:text="50,000 đ"
                    android:textSize="19dp" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_vesinh_worker"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rl_phiphutung_worker"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="20dp">

                <TextView
                    android:id="@+id/tv_PhiVeSinh_worker"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:text="Phí di chuyển:"
                    android:textSize="19dp" />

                <TextView
                    android:id="@+id/tv_giaPhiVeSinh_worker"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:padding="5dp"
                    android:text="15,000 đ"
                    android:textSize="20dp" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_tienCong_worker"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rl_vesinh_worker"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="20dp">

                <TextView
                    android:id="@+id/tv_TienCong_worker"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:text="Phí dịch vụ:"
                    android:textSize="19dp" />

                <TextView
                    android:id="@+id/tv_giaTienCong_worker"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:padding="5dp"
                    android:text="150,000 đ"
                    android:textSize="19dp" />

            </RelativeLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/billWorkerList"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/rl_tienCong_worker"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <View
                android:id="@+id/vLine2_worker"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/billWorkerList"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="10dp"
                android:background="#80000000" />

            <RelativeLayout
                android:id="@+id/rl_Total_worker"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/vLine2_worker"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="20dp">

                <TextView
                    android:id="@+id/tv_Total_worker"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Tổng tiền:"
                    android:textSize="26dp"
                    android:textStyle="bold" />


                <TextView
                    android:id="@+id/tv_TotalCost_worker"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:text="215,000 đ"
                    android:textSize="26dp"
                    android:textStyle="bold" />


            </RelativeLayout>

            <LinearLayout
                android:layout_below="@id/rl_Total_worker"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <Button
                    android:id="@+id/btn_themdichvu_worker"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="14sp"
                    android:layout_marginEnd="10dp"
                    android:alpha="0.7"
                    android:background="@drawable/bg_khongcamon"
                    android:text="Thêm dịch vụ"/>
                <Button
                    android:id="@+id/btnAcceptBillToRating_worker"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="14sp"
                    android:background="@drawable/bg_goi"
                    android:text="Gửi Hóa Đơn"/>

            </LinearLayout>
        </RelativeLayout>

    </ScrollView>
</RelativeLayout>